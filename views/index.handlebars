<h1>This is the Quotes Part!</h1>

<div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="byRating" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Filter By Rating:
    <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><a href="./quotes/rating/G">Rating G</a></li>
        <li><a href="./quotes/rating/PG">Rating PG</a></li>
        <li><a href="./quotes/rating/R">Rating R</a></li>
    </ul>
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="byId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Filter By ID:
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu2" id="quotes-by-id">
            {{!-- quotes by ID will be added here by script below --}}
        </ul>
    </div>
</div>
{{#each quotes}}
<div "panel panel-default">
    {{!--
    <p>
        <span class="label">ID:</span> {{this.id}}</p>--}}
    <div class="panel-heading">
        <div class="panel-title quote">Quote: {{this.quote}}</p>
            <div class="panel-body quote-label">
                Rating:{{this.rating}}<br>
                Source:{{this.source}}<br>
                Year:{{this.year}}
            </div>
        </div>
    </div>
</div>
<hr>

</div>
</div>
{{/each}}

<script type="text/javascript" language="JavaScript">
    for (i = 1; i < 108; i++) {
        var li = $("<li>");
        var a = $("<a>");
        a.attr("href", "./quotes/id/" + i);
        a.html(i);
        $("#quotes-by-id").append(li);
        li.append(a);

    }
</script>