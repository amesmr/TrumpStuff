<script type="text/javascript" language="JavaScript">
    if (window.top.location.pathname == "/") {
        // this is the main.html page
        // hide the navbar
        $(".navbar").hide();
        // hide the footer
        $(".footer").hide();
    }

    // add the list items for the quotes by ID button
    for (i = 1; i < 108; i++) {
        var li = $("<li>")
        var a = $("<a>");
        a.addClass("dropdown-item");
        a.attr("href", "./quotes/id/" + i);
        a.html(i);
        $("#quotes-by-id").append(li);
        li.append(a);
    }
</script>